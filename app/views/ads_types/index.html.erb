<h1>Listing ads_types</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ads_types.each do |ads_type| %>
  <tr>
    <td><%= ads_type.name %></td>
    <td><%= link_to 'Edit', edit_ads_type_path(ads_type) if can? :update, ads_type %></td>
    <td><%= link_to 'Destroy', ads_type, :method => :delete if(can?(:delete, ads_type) && Ad.where(:ads_type_id => ads_type.id.to_s).empty?)%></td>
  </tr>
<% end %>
</table>

<br />

